@model Movie
@{ 
    string strAction = "";
    if(ViewBag.Mode == "Edit")
    {
        strAction = "UpdateMovie";
        <h3>Update Movie</h3>
    }
    else
    {
        ViewBag.ID = 0;
        strAction = "AddMovie";
        <h3>Add Movie</h3>
    }
}

<div class=" error-message" asp-validation-summary="All"></div>
<form asp-controller="Movie" asp-action="@strAction" method="post">
    <input asp-for="ID" value="@ViewBag.ID" hidden/>
    <input asp-for="Title" placeholder="Title" />
        <span asp-validation-for="Title" class="error-message"></span>
    <input asp-for="Year" placeholder="Year" />
    <input asp-for="Rating" placeholder="Rating" />
    <select asp-for="GenreId" asp-items="@ViewBag.Genres"></select>

    <button type="submit">Save</button>
</form>