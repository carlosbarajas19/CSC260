@model Game
@{
}

@if (Model == null)
{
    <h1>No Games provided</h1>

}
else
{
    <h3 class="text-center">@Model.Title</h3>
    <div class="float-left">
        <h5>Year: @Model.Year</h5>
        <h5>Rating: @Model.Rating</h5>
        
        <form class="mt-10" asp-controller="Game" asp-action="Rent">
            <input type="number" name="ID" value="@Model.ID" hidden="hidden" />
            <button class="w-auto" type="submit">Rent</button>
        </form>

    </div>
    <div class="game-cover float-right">
        <img src="@Model.ImagePath" />
    </div>

}