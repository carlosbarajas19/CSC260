@model Game
@{
}

<div class=" error-message" asp-validation-summary="All"></div>
<form asp-controller="Game" asp-action="AddGame" method="post">
    <input asp-for="ID" value="@ViewBag.ID" hidden />
    <input asp-for="Title" placeholder="Title" />
    <span asp-validation-for="Title" class="error-message"></span>
    <select asp-for="Platform">
        <option value="null">Platform</option>
        @foreach (Platform platform in Enum.GetValues(typeof(Platform)))
        {
            <option value="@platform">@platform.ToString()</option>
        }
    </select>
    <input asp-for="Genre" placeholder="Genre"/>
    <input asp-for="Year" placeholder="Year" />
    <input asp-for="Rating" placeholder="Rating" />
    @*<input asp-for="ImagePath" placeholder="ImagePath" />*@
    <button type="submit">Add Game</button>
</form>
